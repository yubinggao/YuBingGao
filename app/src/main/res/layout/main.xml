        <com.yubinggao.lib.view.CountdownView
                android:id="@+id/pickerview_cv"
                style="@style/MainTextView"/>

        <com.yubinggao.lib.view.CountdownView
                android:id="@+id/amap_map_cv"
                style="@style/MainTextView"/>

        <com.yubinggao.lib.view.CountdownView
                android:id="@+id/recyclerview_cv"
                style="@style/MainTextView"/>
        <com.yubinggao.lib.view.CountdownView
